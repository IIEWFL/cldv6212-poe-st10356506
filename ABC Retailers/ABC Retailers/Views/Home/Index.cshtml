@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- bootstrap CSS for styling -->
    <link href="https://cdn. for stylingjsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       /*  styling for the background image containing the text and shop now button */
        .hero {
            background: url('https://content.app-sources.com/s/58016222233202601/uploads/Images/rev2-4546949.jpg?format=webp') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 100px 0;
            position: relative;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .hero p {
            font-size: 1.5rem;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        .features .feature-icon {
            font-size: 80px;
            color: #007bff;
            margin-bottom: 15px;
        }

        .features h3 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .features p {
            font-size: 1rem;
        }

        footer {
            background-color: #343a40;
            color: #adb5bd;
            padding: 20px 0;
            font-size: 0.9rem;
        }

            footer a {
                color: #adb5bd;
                text-decoration: none;
            }

                footer a:hover {
                    color: #ffffff;
                }
    </style>
</head>

<body>

    <!-- text and button linking to the products page -->
    <header class="hero text-center">
        <div class="hero-overlay"></div>
        <div class="container hero-content">
            <h1 class="display-4">Welcome to ABC Retailers</h1>
            <p class="lead">Your one-stop shop for all your needs.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Product")" role="button">Shop Now</a>
        </div>
    </header>

    <!-- text under the image -->
    <section class="features py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="bi bi-cart"></i>
                    </div>
                    <h3>Wide Selection</h3>
                    <p>Explore our extensive range of products.</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h3>Secure File Share</h3>
                    <p>Your sensitive files are stored safely and securely.</p>
                </div>
                <div class="col-md-4">
                    <div class="feature-icon">
                        <i class="bi bi-shield"></i>
                    </div>
                    <h3>Secure Payments</h3>
                    <p>Your payments are safe and secure with our trusted payment gateways.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; 2024 ABC Retailers. All rights reserved.</p>
            <p>
                <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
            </p>
        </div>
    </footer>
</body>

</html>
