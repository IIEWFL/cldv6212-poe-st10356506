@{
    ViewData["Title"] = "Add New Customer";
}

@*https://github.com/Egoscio-zz/webapps/blob/558608c59d1925bdeee7c48165760d99d43a13e8/README.md*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Customer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @* https://www.w3schools.com/bootstrap/bootstrap_forms.asp?form=MG0AV3 *@
</head>
<body>
    @* form for adding a new customer *@
    @*https://getbootstrap.com/docs/4.0/components/forms/?form=MG0AV3*@

    <div class="container my-4">
        <h2 class="mb-4">Add New Customer</h2>
        <form method="post" enctype="multipart/form-data" action="@Url.Action("AddCustomer", "Customer")">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required />
            </div>
            <div class="mb-3">
                <label for="surname" class="form-label">Surname:</label>
                <input type="text" class="form-control" id="surname" name="surname" required />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="mb-3">
                <label for="age" class="form-label">Age:</label>
                <input type="number" class="form-control" id="age" name="age" required />
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Profile Picture:</label>
                <input type="file" class="form-control" id="image" name="image" />
            </div>
            <button type="submit" class="btn btn-success">Add Customer</button>
        </form>
    </div>
</body>
</html>
